[Unit]
Description=websocket-server

[Service]
ExecStart=/data/cress/prism/node_modules/.bin/y-websocket-server
Restart=always
RestartSec=10
User=root
Group=root
Environment='PATH=/home/ec2-user/.nvm/versions/node/v14.4.0/bin' 'YPERSISTENCE=/data/cress/prism/dbDir' 'CERTDIR=/etc/letsencrypt/live/cress.soc.surrey.ac.uk'
# Output to syslog
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=websocket-server

[Install]
WantedBy=multi-user.target